@model Agenda.Aplicacao.ViewModel.ContatoViewModel

<div class="form-group">
    <label asp-for="ContatoEmail.Email" class="control-label"></label>
    <input asp-for="ContatoEmail.Email" class="form-control" />
    <span asp-validation-for="ContatoEmail.Email" class="text-danger"></span>
    @if (ViewBag.Detalhe != "Detalhe")
    {
        <button id="btnNovoEmail" type="submit" class="btn btn-default" name="provider" value="@Model" title="Adicionar um novo Telefone" asp-action="AddContatoEmail">Adicionar</button>
    }
</div>