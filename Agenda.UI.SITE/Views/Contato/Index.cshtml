@model IEnumerable<Agenda.Aplicacao.ViewModel.ContatoViewModel>

@{
    ViewData["Title"] = "Contatos";
}

<h2>Lista de Contatos</h2>
<br/>


<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="Create" class="btn btn-primary">
                    <span title="Cadastrar Novo" class="glyphicon glyphicon-plus-sign"></span> Cadastrar Novo
                </a>
            </div>
        </div>
    </div>
</div>
<br />

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdContato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DtCadastro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdContato)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DtCadastro)
                </td>
                <td>
                    <a asp-action="EditarContato" asp-controller="Contato" asp-route-idContato="@item.IdContato" title="Edit" class="btn btn-warning">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>

                    <a asp-action="DetalheContato" asp-controller="Contato" asp-route-idContato="@item.IdContato" title="Details" class="btn btn-primary">
                        <span class="glyphicon glyphicon-search"></span>
                    </a>

                    <a asp-action="DeletarContato" asp-controller="Contato" asp-route-idContato="@item.IdContato" title="Delete" class="btn btn-danger">
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
